{
  "name": "omnidesk",
  "version": "5.0.1",
  "description": "A multi-provider Electron desktop application for AI coding CLIs",
  "main": "dist/main/index.js",
  "scripts": {
    "postinstall": "node -e \"console.log('\\n⚠️  OmniDesk is a desktop application.\\n\\nYou\\'ve installed the SOURCE CODE. To get the INSTALLABLE APP:\\n→ https://github.com/carloluisito/claudedesk/releases\\n\\nTo build from source: npm run package\\n')\"",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "electron:dev": "concurrently \"vite\" \"npm run electron:watch\"",
    "electron:watch": "tsc -p tsconfig.main.json && electron .",
    "start": "npm run build && npm run build:electron && electron .",
    "package": "npm run build && npm run build:electron && electron-builder",
    "package:win": "npm run package -- --win",
    "package:mac": "npm run package -- --mac",
    "package:linux": "npm run package -- --linux",
    "test": "vitest run --config vitest.workspace.ts",
    "test:watch": "vitest --config vitest.workspace.ts",
    "test:unit": "vitest run --config vitest.workspace.ts --project shared --project main",
    "test:integration": "vitest run --config vitest.workspace.ts --project renderer",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --config vitest.workspace.ts --coverage",
    "test:ci": "vitest run --config vitest.workspace.ts --coverage --reporter=default --reporter=junit --outputFile=test-results.xml"
  },
  "dependencies": {
    "@xyflow/react": "^12.10.0",
    "lucide-react": "^0.563.0",
    "node-pty": "^1.2.0-beta.11",
    "uuid": "^9.0.0",
    "ws": "^8.19.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^28.0.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "author": "Carlo Luisito Adap <carlo.adap@hotmail.com>",
  "license": "MIT"
}
